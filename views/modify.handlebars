<div class="panel panel-primary">
  <h1>modifymodifymodifymodify</h1>
    <form method="post" action="/post/{{ image.uniqueId }}/update" enctype="multipart/form-data">
        <div class="panel-body form-horizontal">
            <div class="form-group col-md-12">
                <label class="col-sm-2 control-label" for="file">Browse:</label>
                <div class="col-md-10">{{ image.filename }}</div>
                <div class="col-md-10">
                    <input class="form-control" type="file" name="file">
                </div>
            </div>
            <div class="form-group col-md-12">
                <label class="col-md-2 control-label" for="title">Title:</label>
                <div class="col-md-10">
                    <input class="form-control" type="text" value="{{ image.title }}" name="title">
                </div>
            </div>
            <div class="form-group col-md-12">
                <label class="col-md-2 control-label" for="description">Description:</label>
                <div class="col-md-10">
                    <textarea class="form-control" name="description" rows="2">{{ image.description }}</textarea>
                </div>
            </div>
            <div class="form-group col-md-12">
                <label class="col-md-2 control-label" for="hashtag">Hashtag:</label>
                <div class="col-md-10">
                    <input class="form-control" type="text" value="{{ image.hashtag }}" name="hashtag">
                </div>
            </div>
            <div class="form-group col-md-12">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-success" type="button"><i class="fa fa-cloud-upload "></i>
                        Upload Image</button>
                </div>
            </div>
        </div>
    </form>
</div>
